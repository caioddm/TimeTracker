<h1>Welcome <%=current_user.name%>!</h1>

<div>
		<span style="float: left; font-size:18px; font-weight: bold; margin-right:15px;">Timesheet from <%= @start_period.strftime("%m/%d/%y")%> to <%= @end_period.strftime("%m/%d/%y")%></span>
</div>
<br/>
<table id="table-fields" align="center">

	<tr>
		<th>Employee</th>
		<th>Time (in Hours)</th>
		<th>Type</th>
	</tr>
	<% count = 0%>

	<% @timesheet.each do |t|%>
	<% trClass = ""
    if count%2 == 1
      trClass = "alt"
    end
    count = count + 1
%>
	<tr class="<%= trClass%>">
		<%if t.user.last_name%>
			<td> <%= t.user.name + " " + t.user.last_name%> </td>
		<%else%>
			<td> <%=t.user.name%></td>
	    <% end %>
		<td><%= t.getMinutesInHours %></td>
		<% if 0 == t.request_type%>
		<td>Regular</td>
		<%elsif 1 == t.request_type%>
		<td>Sick Leave </td>
		<%elsif 2 == t.request_type%>
		<td>Holiday Leave </td>
		<%else %>
		<td>Other</td>
		<%end%>
	</tr>
	<% end %>
</table>

