<h1>Listing Requests</h1>

<table id="table-fields">
  <tr>
	<th>Employee Name</th>
	<th>Start</th>
	<th>End </th>
	<th>Type</th>
	<th>Date</th>
	<th>Status</th>
</tr>

<% @requests.each do |request| %>
 <tr>
	<td><%= request.user.name %></td>
	<td><%= request.start %></td>
	<td><%= request.end %></td>
	<td><%= request.date %></td>
	<td><%= Request::TYPE_DROP.index(request.request_type) %></td>
	<td><%=  Request::STATUS_DROP.index(request.status)%></td>
	<td><%= link_to 'Show', request %></td>
	<td><%= link_to 'Edit', edit_request_path(request) %></td> <!--To implement: Employee can't edit once decsion is made-->
	<td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

