<h1>All users</h1>

<table>
	<tr>
		<th>Name</th>
		<th>Email</th>
		<th>User Type</th>
		<th>Address</th>
	</tr>

	<% @users.each do |user| %>
	<tr>
		<td><%= link_to user.name, edit_manageuser_path(user) %></td>
		<td><%= user.email %></td>
		<td><% if user.is_admin %>
		Admin
		<%
		else %>Normal<%

		end  %></td>
		<td><%= user.address %></td>
		<td><%= link_to "Delete", manageuser_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
		<td><%= user.is_user_active%></td>
	</tr>
	<% end %>
</table>

<%= link_to "Create New User", action: "new" %>