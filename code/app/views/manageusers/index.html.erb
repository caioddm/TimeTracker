<h1>All users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
	<th>Address</th>
  </tr>
 
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, manageusers_path %></td>
      <td><%= user.email %></td>
      <td><%= user.address %></td>
      <td><%= link_to "Delete", manageuser_path(user), method: :delete, data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>

<%= link_to "Create New User", action: "new" %>